{
  "configurations": {
    "Ruby: Listen for rdebug-ide": {
      "adapter": "cust_vscode-ruby",
      "configuration": {
        "type": "Ruby",
        "request": "attach",
        "remoteHost": "127.0.0.1",
        "remotePort": "1234",
        "remoteWorkspaceRoot": "${workspaceRoot}"
      }
    },
    "rspec current file": {
      "adapter": "cust_vscode-ruby",
      "configuration": {
        "type": "Ruby",
        "request": "launch",
        "program": "${workspaceRoot}/bin/rspec",
        "args": [
          "-I",
          "${workspaceRoot}",
          "${file}"
         ]
      }
    },
    "Rails Server": {
      "adapter": "cust_vscode-ruby",
      "configuration": {
        "type": "Ruby",
        "request": "launch",
        "program": "${workspaceRoot}/bin/rails",
        "args": [
          "server"
         ]
       }
    }
  }
 }
